<div bebop-ui--gallery-item-type="audio" bebop-ui--gallery-item-view="browse">
    
    {{#id}}
        {{^playlist}}
            <div bebop-ui--gallery-item-widget>
                <iframe width="160" height="107" scrolling="no" frameborder="no" src="https://w.soundcloud.com/player/?url=https%3A//api.soundcloud.com/tracks/{{id}}&amp;player_type=tiny&amp;auto_play=false&amp;hide_related=true&amp;visual=false&amp;buying=false&amp;sharing=false&amp;download=false&amp;show_bpm=false&amp;bpm=false&amp;show_comments=false&amp;show_playcount=false"></iframe>
            </div>
            <div bebop-ui--gallery-item-meta>
                {{#title}}
                    <div bebop-ui--gallery-item-title>{{title}}</div>
                {{/title}}
            </div>
        {{/playlist}}
    {{/id}}

    {{#playlist}}
        <div bebop-ui--gallery-item-widget>
            <iframe width="160" height="107" scrolling="no" frameborder="no" src="https://w.soundcloud.com/player/?url=https%3A//api.soundcloud.com/playlists/{{playlist}}&amp;player_type=tiny&amp;auto_play=false&amp;hide_related=true&amp;visual=false&amp;buying=false&amp;sharing=false&amp;download=false&amp;show_bpm=false&amp;bpm=false&amp;show_comments=false&amp;show_playcount=false"></iframe>
        </div>
        <div bebop-ui--gallery-item-meta>
            {{#title}}
                <div bebop-ui--gallery-item-title>{{title}}</div>
            {{/title}}
        </div>
    {{/playlist}}

    {{^id}}
        {{^playlist}}
            <span class="description">You need to insert a Soundcloud Track ID or Playlist ID</span>
        {{/playlist}}
    {{/id}}
    
</div>