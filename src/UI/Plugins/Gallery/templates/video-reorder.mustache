<div bebop-ui--gallery-item-type="video" bebop-ui--gallery-item-view="reorder">

    {{#id}}
        {{#source_is_youtube}}
            <div bebop-ui--gallery-item-widget>
                <iframe src="//www.youtube.com/embed/{{id}}" width="100" height="67" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>
            </div>
            <div bebop-ui--gallery-item-meta>
                {{#title}}
                    <div bebop-ui--gallery-item-title>{{title}}</div>
                {{/title}}
            </div>
        {{/source_is_youtube}}

        {{#source_is_vimeo}}
        	<div bebop-ui--gallery-item-widget>
                <iframe src="//player.vimeo.com/video/{{id}}" width="100" height="67" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>
    	    </div>
            <div bebop-ui--gallery-item-meta>
                {{#title}}
                    <div bebop-ui--gallery-item-title>{{title}}</div>
                {{/title}}
            </div>
        {{/source_is_vimeo}}
    {{/id}}

    {{^id}}
    <span class="description">You need to insert a {{#source_is_youtube}}Youtube{{/source_is_youtube}}{{#source_is_vimeo}}Vimeo{{/source_is_vimeo}} ID</span>
    {{/id}}

</div>